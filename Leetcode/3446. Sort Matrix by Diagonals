import java.util.*;

class Solution {
    public int[][] sortMatrix(int[][] grid) {
        int n = grid.length;

        for (int c = 1; c < n; c++) {
            sortDiagonal(grid, 0, c, true); 
        }

        for (int r = 0; r < n; r++) {
            sortDiagonal(grid, r, 0, false); 
        }

        return grid;
    }

    private void sortDiagonal(int[][] grid, int row, int col, boolean ascending) {
        int n = grid.length;

        List<Integer> diagonal = new ArrayList<>();
        int r = row, c = col;
        while (r < n && c < n) {
            diagonal.add(grid[r][c]);
            r++;
            c++;
        }

        if (ascending) {
            Collections.sort(diagonal);
        } else {
            Collections.sort(diagonal, Collections.reverseOrder());
        }

        r = row;
        c = col;
        int idx = 0;
        while (r < n && c < n) {
            grid[r][c] = diagonal.get(idx++);
            r++;
            c++;
        }
    }
}
