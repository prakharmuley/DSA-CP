class Solution {
    public long countAlternatingSubarrays(int[] nums) {
         int prev = nums[0];
        long count = 1;
        long ans = 0;
        for(int i = 1;i<nums.length;i++){
            if(nums[i]==1-prev){
                count++;    
            }else{
                ans = ans+ (count*(count+1)/2);
                count = 1;
            }
            prev = nums[i];  
        }
        return ans+(count*(count+1)/2);
    }
}
