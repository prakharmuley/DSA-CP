class Solution {
    public int maxArea(int[] a) {
        int n=a.length;
        int l=0,r=a.length-1,ans=0,res=0;
        while(l<r)
        {
            if(a[l]<=a[r])
            {
                ans=Math.max(ans,(r-l)*Math.min(a[l],a[r]));
                l++;
            }
            else if(a[r]<a[l])
            {
                ans=Math.max(ans,(r-l)*Math.min(a[l],a[r]));
                r--;
            }
        }
        return ans;
    }
}
