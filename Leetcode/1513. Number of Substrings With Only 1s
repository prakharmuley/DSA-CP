class Solution {
    public int numSub(String s) {
        long cnt=1L;
        long ans=0L;
        int mod=(int)1e9+7;
        int i=0;
        for( i=0;i<s.length();i++)
        {
            cnt=0L;
           while(i<s.length()&&s.charAt(i)=='1')
           {
            cnt++;
            i++;
           }
           ans=(ans%mod+ ((cnt)*((cnt+1))/2)%mod)%mod;
        }
     
        return (int)ans;
    }
}
