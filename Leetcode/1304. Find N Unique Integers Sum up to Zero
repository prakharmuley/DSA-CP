class Solution {
    public int[] sumZero(int n) {
        int[] ans=new int[n];
        int x=-5000;
        int j=0;
        for(int i=1;i<=n;i++)
        {
            ans[j]=x;
            ans[n-j-1]=-1*x;
            j++;
            x--;
        }
        if(n%2==1)
           ans[n/2]=0;
           
        return ans;
    }
}
