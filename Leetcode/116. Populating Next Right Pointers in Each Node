//DFS Approach

class Solution {
    public void dfs(Node root)
    {
        if(root==null) return ;
        if(root.left==null) return;
    
        root.left.next=root.right;
        if(root.next!=null)
        {
            root.right.next=root.next.left;
        }
        dfs(root.left);
        dfs(root.right);
        
    }
    public Node connect(Node root) {
        dfs(root);
        return root;
    }
