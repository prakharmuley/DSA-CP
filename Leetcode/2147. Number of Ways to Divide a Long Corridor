class Solution {
    int pre[];
    public int numberOfWays(String corridor) {
        int n=corridor.length();
        long mod=(long)1e9+7;
        int totalSeats=0;
        pre=new int[n];
        for(int i=0;i<corridor.length();i++){

            if(corridor.charAt(i)=='S')totalSeats++;
        }
        

        if(totalSeats==2)return 1;//if total seats are 2 only one possible distribution
        if(totalSeats<=1||totalSeats%2!=0)return 0;// if total seats are less than 1 or are odd no possible way to distribute exactly 2 seats.
        int count=0;//Number of seats in current partition
        long ans=1;
        int cc=1;//current Count for valid partions between recent 2 seats group and upcoming recent 2 seats group
        for(int i=0;i<corridor.length();i++){
            if(corridor.charAt(i)=='S'){
                count++;//seat Count
            }
            if(count==2){//set of 2 seats found
                int j=i+1;
                while(j<n&&corridor.charAt(j)!='S'){// All the positions where I can place partition
                    j++;cc++;
                }
                
                if(j!=n)ans=((ans%mod)*(cc%mod));
                cc=1;
                i=j-1;
                count=0;
            }

            
        }
        return(int) (ans%mod);
        
    }
    
}
